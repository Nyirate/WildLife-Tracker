{{#partial "content"}}
    <div class="container">
        <div class="well" style="width:30%;opacity:0.7;margin-left:40%;margin-top:7%">
            <h1>Sighting</h1>

            <form action="/yes" method="post">
                <label for="rangername" style="margin-left:7px;">Rangername</label>
                <input id="rangername" name="rangername" type="text" style="margin-left:12%;">
                <br>
                <label for="location" style="margin-left:7px;">Location</label>
                <select name="location">
                    <option value=""></option>
                    <option value="zone A">Zone A</option>
                    <option value="near the river">Near the River</option>
                    <option value="NE quadrant">NE Quadrant</option>
                </select>
                <br>
                <br>
                <button type="submit" class="btn btn-default">Add Sighting</button>
            </form>
        </div>

    </div>

{{/partial}}

