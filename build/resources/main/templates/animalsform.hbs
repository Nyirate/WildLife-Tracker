{{#partial "content"}}
    <div class="row">
        <div class="col-sm-6">
            <div class="well" style="width:30%;opacity:0.7;margin-left:40%;margin-top:7%">
                <h1>New Animal</h1>

                <form action="/new1" method="post">
                    <label for="name" style="margin-left:7px;">Name</label>
                    <input id="name" name="name" type="text" style="margin-left:8.2%;">
                    <br>
                    <label for="id" style="margin-left:7px;">Id</label>
                    <input id="id" name="id" type="text" style="margin-left:12%;">
                    <br>
                    <label for="id" style="margin-left:7px;">Is it an endangered animal?</label>
                    <input type="checkbox" name="yes" value="yes">Yes
                    <input type="checkbox" name="no" value="no">No
                    <br>
                    <br>
                    <button type="submit" class="btn btn-default">Add Animal</button>
                </form>
        </div>

        </div>

        <div class="col-sm-6">
            <div class="well" style="width:30%;opacity:0.7;margin-left:40%;margin-top:7%">
