                <br>
                <h2>Endangered Animal</h2>

                <form action="/new1" method="post">
                    <label for="name" style="margin-left:7px;">Name</label>
                    <input id="name" name="name" type="text" style="margin-left:8.2%;">
                    <br>
                    <label for="id" style="margin-left:7px;">Id</label>
                    <input id="id" name="id" type="text" style="margin-left:12%;">
                    <br>
                    <label for="id" style="margin-left:7px;">Health</label>
                    <input type="checkbox" name="healthy" value="healthy">Healthy
                    <input type="checkbox" name="ill" value="ill">Ill
                    <input type="checkbox" name="okay" value="okay">Okay
                    <br>
                    <label for="id" style="margin-left:7px;">Age</label>
