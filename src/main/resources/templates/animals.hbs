{{#partial "content"}}

    <h1></h1>

    {{#if pests}}
        {{#each pests}}
            <div class="row">
                <div class="col-sm-6">
                    <div class="well" style="width:30%;opacity:0.7;margin-left:40%;margin-top:7%">
                        <p style="color:black;font-size:25px">Animals's name:{{name}} </p>
                        <p style="color:black;font-size:25px">Animals's age:{{age}}</p>
                        <p style="color:black;font-size:25px">Animals's health:{{health}}</p>
                        <br>
                    </div>
                </div>

            </div>

        {{/each}}
    {{else}}
        <p style="text-align:center;margin-left:20%;color:white;font-size:25px">No animal reported</p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}