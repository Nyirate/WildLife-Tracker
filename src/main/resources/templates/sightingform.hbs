{{#partial "content"}}
    <div class="container">
        <div class="well" style="opacity:0.6;width:50%;margin-left:25%;margin-top:5%">
            <p id="one">Wildlife tracking is a process whereby biologists, scientific researchers or conservation agencies
                can remotely observe relatively fine-scale movement of animals..With your information people in charge
                will get to know the location of animals..SAVE ANIMALS!!</p>
        </div>
        <div class="well" style="width:30%;opacity:0.9;margin-left:25%;margin-top:7%,background-color:black">
            <h1 style="font-weight:bold">Sighting</h1>
            <br>
            <form action="/yes" method="post">
                <label for="rangername" style="margin-left:18px;">Rangername</label>
                <input id="rangername" name="rangername" type="text" style="margin-left:7.4%;">
                <br>
                <label for="location" style="margin-left:18px">Location</label>
                <br>
                <select name="location" style="margin-left:18px;">
                    <br>
                    <option value=""></option>
                    <option value="zone A">Zone A</option>
                    <option value="near the river">Near the River</option>
                    <option value="NE quadrant">NE Quadrant</option>
                </select>
                <br>
                <br>
                <button type="submit" class="btn btn-default" style="margin-left:18px">Report</button>
            </form>
        </div>

    </div>

{{/partial}}

